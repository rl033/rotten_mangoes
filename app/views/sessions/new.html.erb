<div class="user-title row">
  <h1 class="col-sm-6 col-sm-offset-4">Log In</h1>
</div>

<%= form_tag session_path do %>
  <div class="signup-form row">
    <%= text_field_tag "email", nil, placeholder: "Email", class: "col-sm-5 col-sm-offset-4" %>
  </div>
  <div class="signup-form row">
    <%= password_field_tag "password", nil, placeholder: "Password", class: "col-sm-5 col-sm-offset-4"%>
  </div>
  <div class="signup-form" ><%= submit_tag "Log In", class: "btn btn-default btn-primary col-sm-2 col-sm-offset-4" %></div>
<% end %>