<footer>
  <small>
    <% if current_user %>
    <div class="avatar">  
      <%= image_tag current_user.avatar %>
    </div>
    Signed in as <%= current_user.full_name %> (<%= link_to "Log out", sessions_path("current"), method: :delete %>)
    <% if current_user.admin == true %>
      <%= link_to "Control Panel", admin_users_path%>
    <% end %>
    <% else %>
      <%= link_to "Log In", new_sessions_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>
</footer>