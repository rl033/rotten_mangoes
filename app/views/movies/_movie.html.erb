  <div class="col-sm-4" id="movie-poster">
    <%#= link_to image_tag(movie.poster_image_url), movie_path(movie) %>
    <%= image_tag movie.poster, class: "movie-img img-responsive"%>
  </div>
  <div class="col-sm-8" id="movie-text">
    <h2 class="movie-title"><%= link_to movie.title, movie_path(movie) %></h2>
    <h4 class="movie-date"><%= formatted_date(movie.release_date) %></h4>
    <h4 class="movie-director">Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
    <hr>
    <p class="movie-description"><%= movie.description %></p>
    <p class="movie-rating"><%= movie.review_average %>/10</p>
  </div>